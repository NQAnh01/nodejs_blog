<h1>Chỉnh sửa khóa học</h1>

<form method='POST' action='/courses/{{course._id}}?_method=PUT'>
  <div class='mb-3'>
    <label for='name' class='form-label'>Tên khóa học</label>
    <input
      type='text'
      class='form-control'
      id='name'
      name='name'
      value='{{course.name}}'
    />
  </div>
  <div class='mb-3'>
    <label for='description' class='form-label'>Mô tả</label>
    <textarea
      type='text'
      class='form-control'
      id='description'
      name='description'
    >{{course.description}}</textarea>
  </div>
  <div class='mb-3'>
    <label for='videoId' class='form-label'>Video Id</label>
    <input
      type='text'
      class='form-control'
      id='videoId'
      name='videoId'
      value='{{course.videoId}}'
    />
  </div>
  <div class='mb-3'>
    <label for='level' class='form-label'>Trình độ</label>
    <input
      type='text'
      class='form-control'
      id='level'
      name='level'
      value='{{course.level}}'
    />
  </div>
  <div class='mb-3'>
    <label for='slug' class='form-label'>Slug</label>
    <input
      type='text'
      class='form-control'
      id='slug'
      name='slug'
      value='{{course.slug}}'
    />
  </div>
  <button type='submit' class='btn btn-primary'>Lưu thay đổi</button>
</form>